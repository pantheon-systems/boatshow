<section {{ attributes.addClass('masthead') }}>
  {{ context_links }}



  {%if not field_hide_page_title %}
    <h1 class="page-title"><span>{{current_page_title}}</span></h1>
  {% endif %}

  {% if brick_background_image is not empty %}
    <div class="brick--background-image">
      {{ brick_background_image }}
    </div>
  {% endif %}

  <div class="container">
    {% if entity.childs %}
      <div class="brick--children">
        {{ entity.childs }}
      </div>
    {% endif %}
  </div>
</section>
