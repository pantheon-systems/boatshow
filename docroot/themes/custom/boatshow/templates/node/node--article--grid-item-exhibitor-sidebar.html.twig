{% set classes = [
'node',
'node--type-' ~ node.bundle|clean_class,
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
'row'
] %}

<article {{ attributes.addClass(classes) }}>

<div class="col-2 col-12-xs">

  {% if title_prefix or title_suffix or display_submitted or unpublished or page is empty and label %}
  <header class="row">
      <div class="col-2-xs col-1-sm col-2-lg article-cat-image-wrap">
      {% if content.field_article_category.0 %}
        {{ content.field_article_category }}
      {% endif %}
      </div>

      <div class="col-10-xs col-11-sm col-10-lg article-title-wrap">
        {{ title_prefix }}
        {% if not page and label %}
        <h2{{ title_attributes }}>
          <a href="{{ url }}">{{ label }}</a>
        </h2>
        {% endif %}
        {{ title_suffix }}

        <div class="submitted">
          {{ node.created.value|date('n/j/Y') }}
        </div>

        {% if content.field_article_category.0 %}
        <div class="article-cat"> | {{ node.field_article_category.0.entity.name.value }}</div>
        {% endif %}

      </div>
  </header>
  {% endif %}

  <div class="content">
    {{ content.field_article_teaser }}
    <a href="{{ url }}" class="read-more">Read More<span class="chevron"></span></a>
    <a class="a2a_dd addtoany">Share<span class="social"></span></a>
  </div>

</div>

</article>
<!-- /article #node -->
