<div class="col-12-xs col-12-sm col-6-md">
  <div class="grid-item">
    {{ title_prefix }}
    <div>
      <a href="{{ url }}" rel="bookmark">
        <div class="image curve-corner" style="background-image: url({{ path }})">
        </div>
      </a>
      <div class="title"><a href="{{ url }}" rel="bookmark">{{ node.label }}</a></div>
      <div class="slugline">
        {% if node.field_article_author is not empty %}
          | {{ content.field_article_author }}
        {% endif %}
      </div>
      <div class="body">
        {{ content.field_article_teaser }}
      </div>
    </div>
    {{ title_suffix }}
  </div>
</div>
