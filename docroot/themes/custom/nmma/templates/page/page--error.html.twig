{% set componentroot = '/themes/custom/nmma/sass' %}

<div class="page-error" {{ attributes.setAttribute('id', 'pg__c') }}>

  <!-- ______________________ HEADER _______________________ -->

   <header class="header {% if hero is empty %}no-hero{% endif %}">
    <div class="container">
      <div class="logo">
        <a href="/">
          <img class="logo-white" src="/themes/custom/nmma/images/logo-white.png" alt="Discover Boating">
          <img class="logo-color" src="/themes/custom/nmma/images/logo-color.png" alt="Discover Boating">
        </a>
      </div>
      <div class="header__right">
        
        {{ page.header }}

        <div class="search">
          <a href="" class="search-trigger">
            <i class="icon icon-db-search"></i>
            <i class="icon icon-db-close"></i>
          </a>
        </div>
        <div>
          <a class="mobile-trigger" href="">
            <i class="icon icon-db-menu"></i>
            <i class="icon icon-db-close"></i>
          </a>
        </div>
      </div>
    </div>
  </header>
  <!-- /header -->

  <!-- ______________________ MAIN _______________________ -->

  <div class="clearfix" id="main">
    <section>
      <div class="col-12-xs col-6-md col-offset-3-md">
        <h5>{{error}} â€” {{page.content}}</h5>

        <h3><i class="icon icon-db-steering-wheel"></i> Ahoy! Lost at sea?</h3>

        <p>
          <strong>Let's get you back on course</strong><br/>
          Head to our <a href="/">homepage</a> or use the search bar:
        </p>
        
        <div>
          <form action="/search">
            <div class="submit-input-field">
              <input type="text" id="inputSubmit" name="keywords">
              <input class="button" type="submit" value="">
              <i class="icon icon-db-arrow-right"></i>
            </div>
          </form>
        </div>
      </div>
    </section>
  </div>
  <!-- /main -->

  <!-- ______________________ FOOTER _______________________ -->

  {% include componentroot ~ '/4-organisms/footer/footer.twig'  %}

</div>
<!-- /page -->
