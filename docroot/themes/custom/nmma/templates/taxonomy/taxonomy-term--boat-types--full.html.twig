{#
/**
 * @file
 * Theme override to display a taxonomy term.
 *
 * Available variables:
 * - url: URL of the current term.
 * - name: Name of the current term.
 * - content: Items for the content of the term (fields and description).
 *   Use 'content' to print them all, or print a subset such as
 *   'content.description'. Use the following code to exclude the
 *   printing of a given child element:
 *   @code
 *   {{ content|without('description') }}
 *   @endcode
 * - attributes: HTML attributes for the wrapper.
 * - page: Flag for the full page state.
 * - term: The taxonomy term entity, including:
 *   - id: The ID of the taxonomy term.
 *   - bundle: Machine name of the current vocabulary.
 * - view_mode: View mode, e.g. 'full', 'teaser', etc.
 *
 * @see template_preprocess_taxonomy_term()
 */
#}
{% if no_hero is not empty %}
  <section class="page-intro">
    <h1>{{ name }}</h1>
  </section>
{% endif %}
<section {% if no_hero is empty %} class="page-intro" {% endif %}>
  <div class="flex-container">
    <div class="col-12-xs col-12-sm col-4-md">
      <h4>{{ name }} Statistics</h4>
      <div class="product-stats">
        <ul>
          <li>
            <i class="icon icon-db-circle-activities-o"></i>
            <strong>{{ content.field_boat_type_activity_type }}</strong>
          </li>
          <li>
            <i class="icon icon-db-circle-passengers-o"></i>
            <strong>{{ content.field_boat_type_passengers }} Max</strong>
          </li>
          <li>
            <i class="icon icon-db-circle-boat-o"></i>
            <strong>{{ content.field_boat_type_min_length }}-{{ content.field_boat_type_max_length }}
              FT</strong>
          </li>
          <li>
            <i class="icon icon-db-circle-propeller-o"></i>
            <strong>{{ content.field_boat_type_engine_type }}</strong>
          </li>
          <li>
            <i class="icon icon-db-circle-trailer-o"></i>
            <strong>{{ content.field_boat_type_trailerable }}</strong>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-12-xs col-12-sm col-7-md col-offset-1-md">
      {{ content.field_boat_type_body }}
      <br />
      <a class="button--secondary" href="#brands-manufacturers">Find a boat manufacturer</a>
    </div>
  </div>
</section>

<section>
  {{ content.field_boat_type_carousel_images }}
</section>

{% if term.field_boat_type_activities_text is not empty %}
  <section class="descriptor activities">
    <div class="flex-container">
      <div class="row">
        <div class="col-12-xs col-12-sm col-4-md">
          <h4>Activities You'll Most Enjoy</h4>
        </div>
        <div class="col-12-xs col-12-sm col-7-md col-offset-1-md">
          {{ content.field_boat_type_activities_text }}
        </div>
      </div>
    </div>
  </section>
{% endif %}

{% if term.field_boat_type_propulsion_text is not empty %}
  <section>
    <hr />

    <div class="flex-container">
      <div class="row">
        <div class="col-12-xs col-12-sm col-4-md">
          <h4>Which Engine is Right For Your Boat</h4>
        </div>
        <div class="col-12-xs col-12-sm col-7-md col-offset-1-md">
          {{ content.field_boat_type_propulsion_text }}
        </div>
      </div>
    </div>
  </section>
{% endif %}

<section>
  <hr />

  <div class="flex-container">
    <div class="row">
      <div class="col-12-xs col-12-sm col-4-md">
        <h4 id="brands-manufacturers" class="pad-xs">{{ name }} Brands and Manufacturers</h4>
      </div>
      <div class="col-12-xs col-12-sm col-7-md col-offset-1-md">
        <div class="flex-container boat-brand-list">
          {{ drupal_view('boatfinder_views','brands_for_boat_type_pages') }}
        </div>
      </div>
    </div>
  </div>

  <br />
</section>

{{ drupal_block('mfr_signup_block', {'nmma_id': content.field_boat_type_nmma_id[0]['#markup'] }) }}

<section class="section-header">
  {% if term.field_boat_type_related is not empty %}
    <h2>You Might Also Like</h2>
  {% endif %}
</section>

<section>
  {% if term.field_boat_type_related is not empty %}
    <div class="flex-container">
      <div class="row">
        {{ drupal_view('boatfinder_views','boat_type_you_might_also_like') }}
      </div>
    </div>
  {% endif %}
  <div class="grid-footer">
    <a href="/buying/boat-finder" class="button--secondary">Back To Boat Finder</a>
  </div>
</section>
