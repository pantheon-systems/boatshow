{% if content %}
  <section {{ attributes.addClass('flex-container').addClass('nmma-layout four-column') }}>
    {% for region in content['#layout'].regions|keys if content[region] %}
      <div class="col-12-sm col-6-md col-3-lg column-item">
        {{ content[region] }}
      </div>
    {% endfor %}
  </section>
{% endif %}
