    {% for video in videos_large %}
    <div class="play-block js-video-modal" data-videoid="{{video.video_id}}" data-videocontainer="true">
      <div class="image curve-corner">
        <div style="background-image: url('{{video.image_src}}')"></div>
        <div class="play-container">
          <i class="icon icon-db-video-play"></i>
        </div>
        <div class="item-title">
          <span>{{video.title}}</span>
          {% if video.subtitle != '' %}
