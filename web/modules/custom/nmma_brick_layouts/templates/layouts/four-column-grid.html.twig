{% extends "@nmma_brick_layouts/layouts/_nmma_layout_base.html.twig" %}
{% block loop %}
  {% if loop.first or loop.index == content['#layout'].regions|length %}
    <div class="col-12-xs col-4-sm column-item">
      {{ content[region] }}
    </div>
  {% else %}
    <div class="col-12-xs col-2-sm column-item">
      {{ content[region] }}
    </div>
  {% endif %}
{% endblock %}
